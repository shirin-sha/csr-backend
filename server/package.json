{
  "name": "loop-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_PATH=./dist node ./dist/index.js",
    "prettier:write": "prettier --write .",
    "build": "tsc",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:node": "cross-env NODE_PATH=./dist  node --enable-source-maps --watch dist/index.js",
    "dev:alt": "concurrently --names \"tsc,node\" -c \"blue,green\"  \"npm run dev:tsc\"  \"npm run dev:node\"",
    "dev": "nodemon -e ts --watch src  --exec \"npm run build && npm start\"",
    "seed:admin": "npm run build && cross-env NODE_PATH=./dist node ./dist/seed-admin.js",
    "scripts:regen-thumbnails": "npm run build && cross-env NODE_PATH=./dist node ./dist/scripts/regenerateThumbnails.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "algoliasearch": "^4.14.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.6",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-fileupload": "^1.4.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.4.3",
    "mongoose-paginate": "^5.0.3",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.7.7",
    "nodemon": "^2.0.19",
    "path": "^0.12.7",
    "rand-token": "^1.0.1",
    "sharp": "^0.31.2",
    "typescript": "^4.8.4",
    "winston": "^3.10.0",
    "winston-mongodb": "^5.1.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.2.2",
    "@types/html-to-draftjs": "^1.4.0",
    "esbuild": "^0.14.51",
    "esbuild-node-tsc": "^1.8.6",
    "swagger-autogen": "^2.21.5"
  }
}
